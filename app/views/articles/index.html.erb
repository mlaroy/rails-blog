<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <div class="text-center">
      <h1>Listing all articles</h1>
      <%= link_to "Create new article", new_article_path, class: 'btn btn-primary ' %>
    </div>
  </div>
</div>

<% @articles.each do |article| %>
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <div class="well well-lg">
        <div class="article-title">
          <%= link_to article.title, article_path(article) %>
        </div>
        <div class="article-body">
          <%= truncate(article.description, length: 100) %>
        </div>
        <div class="article-actions">
          <%= link_to "edit article", edit_article_path(article), class: "btn btn-xs btn-primary" %>
          <%= link_to "delete article", article_path(article),
                                          method: :delete,
                                          data: {confirm: "Are you sure?"},
                                          class: "btn btn-xs btn-danger" %>
        </div>
      </div>
    </div>
  </div>

<% end %>
